<div class="p-2 rounded-lg bg-neutral text-white flex flex-col gap-2 items-center mt-2">
  <h2 class="font-bold text-2xl">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "flex flex-col gap-1 items-center " }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg text-black" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "px-4 py-2 bg-primary rounded-lg mt-4 text-xl hover:bg-primary-focus"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
