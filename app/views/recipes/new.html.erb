<div class="mx-auto md:w-2/3 w-full">
  <h2 class="font-bold text-4xl my-2">New Recipe</h2>
  
  <%= form_for @recipe, html: { class: "contents" } do |f| %>

    <div class="my-1">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, placeholder: "Recipe name", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-1">
      <%= f.label :preparation_time, "Preparation time" %>
      <%= f.text_field :preparation_time, placeholder: "10", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-1">
      <%= f.label :cooking_time, "Cooking time" %>
      <%= f.text_field :cooking_time, placeholder: "20", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-1">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, placeholder: "Recipe description", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="flex gap-2 my-5">
      <%= f.submit "Submit", class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium hover:bg-primary-focus" %>
      <%= link_to 'Back to Recipes', recipes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:bg-gray-200" %>
    </div>

  <% end %>
</div>