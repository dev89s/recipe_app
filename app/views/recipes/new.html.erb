<div class="w-full flex flex-col items-center p-2">
  <h2 class="text-2xl font-bold">New Recipe</h2>
  <%= form_for @recipe, html: { class: "w-full max-w-lg flex flex-col gap-2" } do |f| %>
    <div>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, placeholder: "Recipe name", class: "rounded-lg w-full" %>
    </div>
    <div>
      <%= f.label :preparation_time, "Preparation time" %>
      <%= f.text_field :preparation_time, placeholder: "10", class: "rounded-lg w-full" %>
    </div>
    <div>
      <%= f.label :cooking_time, "Cooking time" %>
      <%= f.text_field :cooking_time, placeholder: "20", class: "rounded-lg w-full" %>
    </div>
    <div>
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, placeholder: "Recipe description", class: "rounded-lg w-full" %>
    </div>
    <div>
      <%= f.submit "Submit", class:"bg-neutral rounded-lg px-4 py-2 text-white" %>
    </div>

  <% end %>
</div>